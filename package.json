  "browserslist": [
    "Firefox >= 128"
  ],
  "devDependencies": {
    "@eslint/json": "1.0.0",
    "@stylistic/eslint-plugin": "5.7.1",
    "eslint": "9.39.2",
    "eslint-plugin-jsdoc": "62.5.2",
    "eslint-plugin-sort-requires": "2.1.0",
    "eslint-plugin-xss": "0.1.12",
    "gulp": "5.0.1",
    "gulp-eslint-new": "2.5.0",
    "gulp-htmllint": "0.0.19",
    "gulp-jsdoc3": "3.0.0",
    "htmllint": "0.8.0",
    "jsdoc": "4.0.5",
    "jsdoc-strip-async-await": "0.1.0",
    "npm-run-all": "4.1.5",
    "stylelint": "17.1.1",
    "stylelint-order": "7.0.1",
    "web-ext": "9.2.0"
  },
  "scripts": {
    "build": "cd src && web-ext build -a ../dist",
    "docs": "gulp docs",
    "lint": "npm-run-all lint:*",
    "lint:html": "gulp lint-html",
    "lint:js": "gulp lint-js",
    "lint:css": "npx stylelint ./src/css/*.css",
    "lint:policies-schema": "jsonschema lint policies-schema.json --exclude top_level_title --exclude top_level_description --exclude top_level_examples --exclude unnecessary_allof_wrapper",
    "lint:policies": "jsonschema validate policies-schema.json src/policies/*.json",
    "lint:webext": "cd src && web-ext lint",
    "run:nightly": "cd src && web-ext run --firefox=nightly",
    "run:beta": "cd src && web-ext run --firefox=beta",
    "run:stable": "cd src && web-ext run --firefox=firefox",
    "run:esr": "cd src && web-ext run --firefox=\"/Applications/Firefox ESR.app\""
  }
}
