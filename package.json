  "name": "enterprise-policy-generator",
  "version": "8.0.0",
  "description": "Generates Enterprise Policies for Firefox.",
  "author": {
    "name": "SÃ¶ren Hentzschel",
    "email": "kontakt@agenedia.com",
    "url": "https://firefox.agenedia.com"
  },
  "homepage": "https://www.soeren-hentzschel.at/firefox-webextensions/enterprise-policy-generator/?utm_campaign=webext&utm_term=enterprise",
  "bugs": {
    "email": "kontakt@agenedia.com"
  },
  "license": "MPL 2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/cadeyrn/enterprise-policy-generator/"
  },
  "private": true,
  "browserslist": [
    "Firefox >= 140"
  ],
  "devDependencies": {
    "@eslint/json": "1.0.0",
    "@html-eslint/eslint-plugin": "0.54.2",
    "@sourcemeta/jsonschema": "14.7.1",
    "@stylistic/eslint-plugin": "5.7.1",
    "eslint": "9.39.2",
    "eslint-plugin-jsdoc": "62.5.3",
    "eslint-plugin-sort-requires": "2.1.0",
    "eslint-plugin-xss": "0.1.12",
    "stylelint": "17.1.1",
    "stylelint-order": "7.0.1",
    "web-ext": "9.2.0"
  },
  "scripts": {
    "build": "web-ext build --source-dir ./src -a ./dist",
    "lint": "npm run lint:html && npm run lint:js && npm run lint:css && npm run lint:policies-schema && npm run lint:policies && npm run lint:web-ext",
    "lint:css": "stylelint ./src/css/**/*.css || true",
    "lint:html": "eslint ./src/html/**/*.html || true",
    "lint:js": "eslint ./src/js/**/*.js ./src/_locales/**/*.json || true",
    "lint:policies-schema": "jsonschema lint policies-schema.json --exclude top_level_title --exclude top_level_description --exclude top_level_examples --exclude unnecessary_allof_wrapper || true",
    "lint:policies": "jsonschema validate policies-schema.json src/policies/*.json || true",
    "lint:web-ext": "web-ext lint --source-dir ./src || true",
    "run:nightly": "web-ext run --source-dir ./src --firefox=nightly",
    "run:beta": "web-ext run --source-dir ./src --firefox=beta",
    "run:stable": "web-ext run --source-dir ./src --firefox=firefox",
    "run:esr": "web-ext run --source-dir ./src --firefox=\"/Applications/Firefox ESR.app\""
  }
}
